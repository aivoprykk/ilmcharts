doctype html
- min = (dev  ? '' : '.min')
html(lang=opt.lang)
	head
		title= opt.title + (dev  ? ' :: R&D' : '')
		meta(charset=opt.charset)
		meta(name="viewport", content="width=device-width")
		meta(name="description" content=opt.desc)
		link(rel="stylesheet", href= opt.css + min + '.css?' + opt.version, media="screen")
		link(rel="shortcut icon" type="image/x-icon" href="css/images/favicon.ico")
		// [if lt IE 9]><script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]
	body(style='padding-top:25px')
		#header
			div.navbar.navbar-inverse.navbar-fixed-top
				div.container-fluid
					div.navbar-header
						button.navbar-toggle(type="button" data-toggle="collapse" data-target="#ilm-navbar-collapse-1")
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a#pagelogo.ilm-pagelogo.navbar-brand(href="/") Ilm
					#ilm-navbar-collapse-1.collapse.navbar-collapse
						ul.nav.navbar-nav.navbar-right
							li.dropdown
								a#ilm-seaded.dropdown-toggle(href="#" data-toggle="dropdown") Seaded
								div#ilm-seaded-dropdown.dropdown-menu(style="padding: 15px")
							li#ilm-lingid: a(href="#") Lingid
							li.dropdown
								a.dropdown-toggle(href="#" data-toggle="dropdown") Info
								ul.dropdown-menu
									li: a(href=opt.giturl) Projekt GitHubis
									li.divider
									li: a(href="http://energia.emu.ee/") Maaülikool
									li: a(href="http://yr.no/") Yr
									li: a(href="http://windguru.cz/") Windguru
									li.divider
									li: a(href="http://jquery.com/") JQuery
									li: a(href="http://highcharts.com/") Highcharts
									li: a(href="http://getbootstrap.com/") Bootstrap
		#backgr.ilm-backgr: img(src="css/images/ranna-001.jpg" alt="Peipsi pilt")
		#bghide.ilm-bghide
		#dots.ilm-dots
		#sisu.ilm-sisu
			#container.col-lg-12
				div.float.col-lg-6
					div.title.btn-group
						a#curplace.btn.btn-default.btn-xs.navbar-btn(style="display:none")
						a#curtime.btn.btn-default.btn-xs.navbar-btn(style="display:none")
						a#cursel.btn.btn-default.btn-xs.navbar-btn.dropdown-toggle(style="display:none" data-toggle="dropdown")
							span.caret
						ul#curmenu.curmenu.dropdown-menu(role="menu")
					input#datepicker(type="text" style="visibility:hidden;height:0;width:0;padding:0;margin:0")
					div.meta
						#curmeta.ilm-meta
				div.float.col-lg-6
					div.title.btn-group
						a#fctitle.btn.btn-default.btn-xs.navbar-btn(style="display:none")
						a#fcsel.btn.btn-default.btn-xs.navbar-btn.dropdown-toggle(style="display:none" data-toggle="dropdown")
							span.caret
						ul#fcmenu.fcmenu.dropdown-menu(role="menu")
					div.meta
						#yrmeta.ilm-meta
						#wgmeta.ilm-meta
		#popup.ilm-popup.panel.panel-primary(style="display:none;")
			#popup_in.panel-heading
				b.panel-title
					a#sl.ilm-sl(href="#" onclick="return ilm.Popup();") Sulge
			#lingid.panel-body
		script(src= opt.contrib + min + '.js')
		script(src= opt.js + min + '.js?' + opt.version)

